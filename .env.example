# App4 Environment Variables

# MongoDB Configuration
MONGODB_URL=mongodb://localhost:27017
MONGODB_DB_NAME=video_commercial_generator

# Google Veo API
GOOGLE_API_KEY=your_api_key_here

# Gemini API Key (opcional, usa GOOGLE_API_KEY si no se especifica)
# GEMINI_API_KEY=your_gemini_api_key_here

# Prompt Optimization Agent
PROMPT_OPTIMIZATION_ENABLED=true
PROMPT_OPTIMIZATION_MODEL=gemini-1.5-pro
TARGET_VIDEO_MODEL=veo-3.1

# WebAI-to-API Integration (Local Gemini Server)
# Set USE_LOCAL_GEMINI=true to use your local WebAI-to-API server instead of official Google API
# This saves costs and avoids rate limits
USE_LOCAL_GEMINI=false
WEBAI_API_BASE_URL=http://localhost:6969/v1
WEBAI_API_KEY=sk-no-key-required

# Backend Configuration
BACKEND_HOST=127.0.0.1
BACKEND_PORT=8003

# Frontend Configuration  
FRONTEND_PORT=5174

# File Storage
PROJECTS_DIR=./projects
TEMP_DIR=./temp

# Production Settings
REFINEMENT_MODE=automatic
MAX_CONCURRENT_GENERATIONS=2
